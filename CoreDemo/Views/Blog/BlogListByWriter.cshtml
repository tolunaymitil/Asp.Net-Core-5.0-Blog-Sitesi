@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları </h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.BlogID</th>
    <td>@item.BlogTitle</td>
    <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yy"))</td>
    <td>
        <span class="badge badge-primary">@item.Category.CategoryName</span>
    </td>
    <td>
        @if (item.BlogStatus)
        {

            <span class="badge badge-success">Aktif</span>

        }

        else

        {

            <span class="badge badge-secondary">Pasif</span>

        }
    </td>
    <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a>
    <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a>
</tr>
     
    }
</table>
<a href="/Blog/BlogAdd" class="btn btn-primary">Yeni Blog Oluştur</a>